# --- FILE .coveragerc BARU YANG BENAR ---

[run]
# Aktifkan pengukuran branch
branch = True

# Tentukan file mana saja yang merupakan kode sumber aplikasi Anda.
# Coverage hanya akan melaporkan file-file ini.
source =
    app2.py
    advanced_analysis.py
    classification.py
    config.py
    copy_move_detection.py
    ela_analysis.py
    export_utils.py
    feature_detection.py
    jpeg_analysis.py
    main.py
    utils.py
    validation.py
    visualization.py

# Abaikan file/folder ini dari pengukuran, meskipun diimpor.
omit =
    */site-packages/*
    test_*.py
    *_test.py
    whitebox_testing.py
    generate_test_dashboard.py
    venv/*
    .venv/*

[report]
# Saat membuat laporan, abaikan baris yang memiliki komentar '# pragma: no cover'
exclude_lines =
    pragma: no cover

# Tambahkan baris ini untuk melihat laporan yang lebih informatif di terminal
show_missing = true
sort = Cover